<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/110/three.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vanta/0.5.21/vanta.net.min.js"></script>
    <style>
        body {
          font-family: 'Arial', sans-serif;
          background: linear-gradient(135deg, #186281, #406477);
          height: 100vh;
          display: flex;
          justify-content: center;
          align-items: center;
          margin: 0;
          padding: 0;
        }
        #bg {
          padding-left:12rem;
          z-index:-1;

	position: fixed;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
}
      
.form-container {
  background: rgba(169, 207, 245, 0.2); /* Light transparency to see blur through it */
  padding: 2rem;
  border-radius: 10px;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3); /* Slightly darker shadow to match the dark background */
  max-width: 500px;
  width: 100%;
  margin: auto;
  backdrop-filter: blur(3px); /* Stronger blur for better contrast with dark background */
  -webkit-backdrop-filter: blur(15px); /* Safari support */
  color: #ffffff; /* Ensures the text is readable on dark blue background */
   /* Soft border to define the form edges */
}

      
        .form-heading {
  text-align: center;
  font-size: 1.5rem;
  color:white;
  margin-bottom: 1.5rem;
   /* Optional: Customize the color */
}
        .form-container form {
          
          display: grid;
          gap: 1rem;
          grid-template-columns: auto 1fr;
        }
      
        .form-container label {
          font-weight: bold;
          color: #fbfafa;
        }
      
        .form-container input[type="file"],
        .form-container input[type="password"] {
          padding: 0.5rem;
          border: 2px solid #00acc1;
          border-radius: 5px;
          font-size: 1rem;
          width: 100%;
        }
      
        .form-container button {
          grid-column: span 2;
          padding: 0.75rem;
          background-color: #0da4e4;
          color: white;
          border: none;
          border-radius: 5px;
          cursor: pointer;
          font-size: 1rem;
          transition: background-color 0.3s ease;
        }
      
        .form-container button:hover {
          background-color: #0f7ab4;
          color: white;
        }
      
        .file-link {
          margin-bottom: 1rem;
          padding: 1rem;
          
          border: 2px solid #00acc1;
          border-radius: 5px;
          text-align: center;
        }
      
        .file-link a {
          color: #56edf0;
          text-decoration: none;
          font-weight: bold;
        }
      
        .file-link a:hover {
          text-decoration: underline;
        }
      </style>
  </head>
  <body>
    <div id="bg">
      </div>
      <script>
        // Initialize the VANTA.NET effect
        VANTA.NET({
          el: "#bg",
          mouseControls: true,
          touchControls: true,
          gyroControls: false,
          minHeight: 400.00,
          minWidth: 400.00,
          scale: 1.00,
          scaleMobile: 1.00,
          color: 0x7accfe,
          backgroundColor: 0x010f18
        });
      </script>
    <div class="form-container">
     
      <h2 class="form-heading">Upload Your File Here</h2>
        <% if (locals.fileLink != null) { %>
          <div class="file-link">
            Your file is uploaded! Download it here: 
            <a href="<%= locals.fileLink %>"><%= locals.fileLink %></a>
          </div>
        <% } %>
      
        <form action="/upload" method="post" enctype="multipart/form-data">
          <label for="file">File:</label>
          <input type="file" id="file" name="file" required />
          <label for="password">Password:</label>
          <input type="password" id="password" name="password" />
          <button type="submit">Share</button>
        </form>
      </div>
      
  </body>
  </html>