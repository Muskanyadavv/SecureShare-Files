<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body {
          font-family: 'Arial', sans-serif;
          background: linear-gradient(135deg, #186281, #406477);
          height: 100vh;
          display: flex;
          justify-content: center;
          align-items: center;
          margin: 0;
          padding: 0;
        }
      
        .form-container {
          background: rgba(255, 255, 255, 0.9);
          padding: 2rem;
          border-radius: 10px;
  box-shadow: 0 8px 20px rgba(10, 10, 10, 0.2); /* Increased shadow */
          max-width: 500px;
          width: 100%;
          margin: auto;
        }
      
        .form-heading {
  text-align: center;
  font-size: 1.5rem;
  margin-bottom: 1.5rem;
  color: #333; /* Optional: Customize the color */
}
        .form-container form {
          display: grid;
          gap: 1rem;
          grid-template-columns: auto 1fr;
        }
      
        .form-container label {
          font-weight: bold;
          color: #333;
        }
      
        .form-container input[type="file"],
        .form-container input[type="password"] {
          padding: 0.5rem;
          border: 1px solid #ccc;
          border-radius: 5px;
          font-size: 1rem;
          width: 100%;
        }
      
        .form-container button {
          grid-column: span 2;
          padding: 0.75rem;
          background-color: #0a7bac;
          color: white;
          border: none;
          border-radius: 5px;
          cursor: pointer;
          font-size: 1rem;
          transition: background-color 0.3s ease;
        }
      
        .form-container button:hover {
          background-color: #24abf4;
          color: #333;
        }
      
        .file-link {
          margin-bottom: 1rem;
          padding: 1rem;
          background-color: #e0f7fa;
          border: 1px solid #00acc1;
          border-radius: 5px;
          text-align: center;
        }
      
        .file-link a {
          color: #00acc1;
          text-decoration: none;
          font-weight: bold;
        }
      
        .file-link a:hover {
          text-decoration: underline;
        }
      </style>
  </head>
  <body>
    
    <div class="form-container">
      <h2 class="form-heading">Upload Your File Here</h2>
        <% if (locals.fileLink != null) { %>
          <div class="file-link">
            Your file is uploaded! Download it here: 
            <a href="<%= locals.fileLink %>"><%= locals.fileLink %></a>
          </div>
        <% } %>
      
        <form action="/upload" method="post" enctype="multipart/form-data">
          <label for="file">File:</label>
          <input type="file" id="file" name="file" required />
          <label for="password">Password:</label>
          <input type="password" id="password" name="password" />
          <button type="submit">Share</button>
        </form>
      </div>
  </body>
  </html>